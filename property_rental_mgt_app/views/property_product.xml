                <xpath expr="//button[@name='action_product_forecast_report']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_property', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//button[@name='action_view_stock_move_lines']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_property', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//button[@name='action_view_orderpoints']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_property', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//button[@name='action_view_related_putaway_rules']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_property', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//button[@name='action_view_storage_category_capacity']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_property', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//button[@name='action_open_product_lot']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_property', '=', True)]}</attribute>
                </xpath>
            </field>
        </record>

        <!-- base structure of product.template, common with product.product -->
        <record id="product_template_form_view_product_inherit" model="ir.ui.view">
            <field name="name">product.template.common.form.product.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='open_pricelist_rules']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_property', '=', True)]}</attribute>
                </xpath>
            </field>
        </record>


