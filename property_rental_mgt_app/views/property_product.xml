        <!-- inherit product form - add property details -->
        <record id="product_normal_form_view_inherit" model="ir.ui.view">
            <field name="name">product.product.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <header>
                    <button class="oe_highlight" type="object" name="button_confirm" string="Confirm Property"
                            icon="fa-check" states="draft" groups="property_rental_mgt_app.group_manager"/>
                    <button class="oe_highlight" type="object" name="button_set_to_draft" string=" Set to Draft"
                            icon="fa-edit" states="rent,sale" groups="property_rental_mgt_app.group_manager"/>

                    <button class="oe_highlight" type="object" name="reserve_property" string="Reserve Rent Property"
                            icon="fa-home" states="rent"/>

                    <button class="oe_highlight" type="object" name="buy_now_property" string="Buy Now Property"
                            icon="fa-shopping-cart" states="sale"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,sale,rent,reserve,sold"
                           attrs="{'invisible': [('is_property', '=',False)]}"/>
                </header>
                <form position="attributes">
                    <attribute name="string">Property Management</attribute>
                </form>

                <xpath expr="//page[@name='general_information']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_property', '=', True)]}</attribute>
                </xpath>


                <xpath expr="//div[@name='options']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_property', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//div[hasclass('oe_title')]/label[@for='name']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_property', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="placeholder">eg. Dubai Shopping Center</attribute>
                </xpath>

                <xpath expr="//div[hasclass('oe_title')]/h1" position="before">
                    <label class="oe_edit_only" for="name" string="Property Name"
                           attrs="{'invisible':[('is_property','=',False)]}"/>
                </xpath>
                <xpath expr="//div[hasclass('oe_title')]" position="inside">
                    <div name="property" attrs="{'invisible':[('is_property','=',False)]}">
                        <div>
                            <field name="is_property" invisible="1" readonly="1"/>
                            <label for="is_property" invisible="1"/>
                            <field name="user_groups_not_allowed" invisible="1"/>
                        </div>
                    </div>
                </xpath>
                <button class="oe_stat_button" name="action_view_sales" position="after">
                    <button class="oe_stat_button" name="action_view_invoice" type="object" icon="fa-pencil-square-o"
                            help="#Invoice of sold Property" attrs="{'invisible':[ ('invoice_count', '=', 0)]}">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="invoice_count" widget="statinfo" nolabel="1" class="mr4"/>
                            </span>
                            <span class="o_stat_text">Invoices</span>
                        </div>
                    </button>
                    <button class="oe_stat_button" name="%(property_contract_action)d" type="action" icon="fa-book"
                            help="#Contract of Rent Property" attrs="{'invisible':[ ('contract_count', '=', 0)]}">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="contract_count" widget="statinfo" nolabel="1" class="mr4"/>
                            </span>
                            <span class="o_stat_text">Contracts</span>
                        </div>
                    </button>
                    <button class="oe_stat_button" name="action_view_maintenance" type="object" icon="fa-gears"
                            help="#Maintanance of Property" attrs="{'invisible':[ ('maintain_count', '=', 0)]}">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="maintain_count" widget="statinfo" nolabel="1" class="mr4"/>
                            </span>
                            <span class="o_stat_text">Maintenance</span>
                        </div>
                    </button>
                </button>
                <xpath expr="//page" position="after">
                    <page name="property" string="Property Information" autofocus="autofocus"
                          attrs="{'invisible':['|','|',('is_property','=',False),('user_groups_not_allowed', '=', True),('is_real_estate_company', '=', False)]}">
                        <group name="property_info">
                            <group string="Basic Information">
                                <field name="property_type" options="{'no_create_edit': True}"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="property_book_for" invisible="1"
                                       attrs="{'required': [('is_property', '=',True)],'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="property_price"
                                       attrs="{'invisible': [('property_book_for', '!=', 'sale')], 'required': [('property_book_for', '=', 'sale')],'readonly': [('state', '!=', 'draft')]}"/>
                                <label for="reasonable_price"
                                       attrs="{'invisible': [('property_book_for', '!=', 'sale')]}"/>
                                <div attrs="{'invisible': [('property_book_for', '!=', 'sale')]}" class="o_row">
                                    <field name="reasonable_price" class="oe_inline"
                                           attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    <span attrs="{'invisible': [('reasonable_price', '=', False)]}">Discount in (%)
                                        <![CDATA[&nbsp;]]>
                                    </span>
                                    <field name="reasonable_price_per" class="oe_inline"
                                           attrs="{'invisible': [('reasonable_price', '=', False)],'readonly': [('state', '!=', 'draft')],'required': [('reasonable_price', '=', True)],}"/>
                                </div>
                                <field name="discounted_price" class="oe_inline"
                                       attrs="{'invisible': [('property_book_for', '!=', 'sale')], 'required': [('property_book_for', '=', 'sale')],'readonly': [('state', '!=', 'draft')]}"/>
                                <!--								<field name="rent_price" attrs="{'invisible': [('property_book_for', '!=', 'rent')], 'required': [('property_book_for', '=', 'rent')],'readonly': [('state', '!=', 'draft')]}"/>-->
                                <label for="reasonable_rent"
                                       attrs="{'invisible': [('property_book_for', '!=', 'rent')]}"/>
                                <div attrs="{'invisible': [('property_book_for', '!=', 'rent')]}" class="o_row">
                                    <field name="reasonable_rent" class="oe_inline"
                                           attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    <span attrs="{'invisible': [('reasonable_rent', '=', False)]}">Discount in (%)
                                        <![CDATA[&nbsp;]]>
                                    </span>
                                    <field name="reasonable_percent" class="oe_inline"
                                           attrs="{'invisible': [('reasonable_rent', '=', False)],'readonly': [('state', '!=', 'draft')], 'required': [('reasonable_rent', '=', True)],}"/>
                                </div>
                                <!--								<field name="deposite" attrs="{'invisible': [('property_book_for', '!=', 'rent')], 'required': [('property_book_for', '=', 'rent')],'readonly': [('state', '!=', 'draft')]}"/>-->
                                <field name="owner_id"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"
                                       options="{'no_create_edit': True}"/>
                                <!--                                'required': ['|',('property_book_for', '=', 'sale'),('property_book_for', '=', 'rent')],-->

                                <!--								<field name="renter_id" options="{'no_create_edit': True}" attrs="{'invisible':[('property_book_for', '!=', 'rent')],'readonly': [('state', '!=', 'draft')]}"/>-->

                                <field name="purchaser_id" options="{'no_create_edit': True}"
                                       attrs="{'invisible':[('property_book_for', '!=', 'sale')],'readonly': [('state', '!=', 'draft')]}"/>

                                <field name="salesperson_id" options="{'no_create_edit': True}" required="1"/>

                                <field name="property_avl_from"
                                       attrs="{'invisible':[('property_book_for', '!=', 'rent')],'readonly': [('state', '!=', 'draft')]}"/>
                                <!--                                'required': [('property_book_for', '=', 'rent')]}-->
                                <label for="age"
                                       attrs="{'invisible': [('property_book_for', '!=', 'rent')],'readonly': [('state', '!=', 'draft')]}"/>
                                <div attrs="{'invisible': [('property_book_for', '!=', 'rent')],'readonly': [('state', '!=', 'draft')]}">
                                    <field name="age" class="oe_inline"
                                           attrs="{'invisible': [('age', '=', 0)],'readonly': [('state', '!=', 'draft')]}"/>
                                    <span class="ml8"
                                          attrs="{'invisible': [('age', '=', 0)],'readonly': [('state', '!=', 'draft')]}">
                                        Years
                                    </span>
                                    <field name="months" class="oe_inline"
                                           attrs="{'invisible': [('months', '=', 0)],'readonly': [('state', '!=', 'draft')]}"/>
                                    <span class="ml8" attrs="{'invisible': [('months', '=', 0)]}">Months</span>
                                </div>
                                <field name="construction_status" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="dewa_number"/>
                                <field name="property_value"/>
                            </group>
                            <group string="Available Facility &amp; Services" name="facility">
                                <label for="maintain_charge" invisible="1"/>
                                <div invisible="1">
                                    <div class="o_row">
                                        <field name="maintain_charge" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <span><![CDATA[&nbsp;]]></span>
                                        <field name="rent_unit" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    </div>
                                </div>
                                <field name="partial_payment_ids" widget="many2many_tags"
                                       attrs="{'invisible': [('property_book_for', '!=', 'sale')], 'readonly': [('state', '!=', 'draft')]}"
                                       options="{'no_create_edit': True}"/>
                                <field name="allow_delay_fine" attrs="{'readonly': [('state', '!=', 'draft')]}"
                                       invisible="1"/>
                                <field name="delay_fine_id"
                                       attrs="{'invisible': [('allow_delay_fine', '=', False)], 'readonly': [('state', '!=', 'draft')]}"
                                       options="{'no_create_edit': True}"/>
                                <field name="facility_ids" widget="many2many_checkboxes"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                            <group string="Location Details" name="area_details">
                                <field name="street" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="location" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="city" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="zipcode" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="state_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="country_id" options="{'no_create': True}"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="phone" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                            <group string="Other Information" name="other">
                                <field name="property_floor" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="build_area" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="carpet_area" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="bedrooms" attrs="{'readonly': [('state', '!=', 'draft')]}" invisible="1"/>
                                <field name="balconies" attrs="{'readonly': [('state', '!=', 'draft')]}" invisible="1"/>
                                <field name="washroom" attrs="{'readonly': [('state', '!=', 'draft')]}" invisible="1"/>
                                <field name="is_real_estate_company" invisible="1" force_save="1"/>
                            </group>
                        </group>
                        <group string="More Description">

                            <field name="more_details" placeholder="Property details."
                                   attrs="{'readonly': [('state', '!=', 'draft')],'invisible':['|',('user_groups_not_allowed', '=', True),('is_real_estate_company', '=', False)]}"/>
                            <field name="is_reserved" invisible="1"/>
                            <field name="is_sold" invisible="1"/>
                            <field name="user_id" invisible="1"/>
                        </group>
                    </page>
                    <page name="property_floor" string="Property Floors" autofocus="autofocus"
                          attrs="{'invisible':['|','|',('is_property','=',False),('user_groups_not_allowed', '=', True),('is_real_estate_company', '=', False)]}">
                        <field name="floor_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                            <tree create="false" edit="false">
                                <field name="name"/>
                                <field name="code"/>
                                <field name="number_of_unit"/>
                                <field name="company_id"/>
                                <field name="currency_id"/>
                                <field name="property_id"/>
                                <field name="floor_area_feet"/>
                                <field name="floor_area_meter"/>
                                <field name="floor_rent_value"/>
                            </tree>
                        </field>
                    </page>
                    <page name="property_unit" string="Property Units" autofocus="autofocus"
                          attrs="{'invisible':['|','|',('is_property','=',False),('user_groups_not_allowed', '=', True),('is_real_estate_company', '=', False)]}">
                        <field name="unit_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                            <tree create="false" edit="false">
                                <field name="name"/>
                                <field name="code"/>
                                <field name="company_id"/>
                                <field name="currency_id"/>
                                <field name="property_id"/>
                                <field name="floor_id"/>
                                <field name="unit_area_feet"/>
                                <field name="unit_area_meter"/>
                                <field name="unit_rent_value"/>
                            </tree>
                        </field>

                    </page>

                    <page name="rent_payer" string="Renter Contract Details"
                          attrs="{'invisible': ['|','|','|',('property_book_for', '!=', 'rent'),('is_property','=',False),('user_groups_not_allowed', '=', True),('is_real_estate_company', '=', False)]}"
                          groups="property_rental_mgt_app.group_manager,property_rental_mgt_app.group_rent_payer">
                        <field name="renter_history_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                            <tree create="false" edit="false">
                                <field name="reference" string="Contract"/>
                                <field name="property_id"/>
                                <field name="unit_id"/>
                                <!--								<field name="renter_id"/>-->
                                <field name="owner_id" string="Owner"/>
                                <field name="from_date" string="Start Date"/>
                                <field name="to_date" string="Expired  Date"/>
                                <!--								<field name="rent_price" />-->
                                <field name="contract_month" string="Months"/>
                                <!--								<field name="deposite"/>-->
                                <field name="offer_price"/>
                                <field name="invoice_id"/>
                                <field name="state"/>
                                <field name="is_invoice" invisible="1"/>
                                <field name="contract_id" invisible="1"/>
                                <button string="Create Invoice" class="oe_highlight" name="create_rent_invoice"
                                        type="object" attrs="{'invisible': [('is_invoice','=',True)]}"/>
                            </tree>
                        </field>
                    </page>

                    <page name="commission" string="Commission Details" groups="property_rental_mgt_app.group_manager"
                          attrs="{'invisible':['|','|',('is_property','=',False),('user_groups_not_allowed', '=', True),('is_real_estate_company', '=', False)]}">
                        <field name="user_commission_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                            <tree editable="bottom">
                                <field name="user_id" required="1"/>
                                <field name="percentage" string="Commission in Percentage(%)"/>
                            </tree>
                        </field>
                    </page>
                    <page name="purchase_detail" string="Purchase Detail"
                          attrs="{'invisible':['|','|',('is_sold', '=', False),('is_real_estate_company', '=', False),('user_groups_not_allowed', '=', True)]}">
                        <group>
                            <group>
                                <field name="purchaser_rel_id" string="Purchaser Name" readonly="1"/>
                            </group>
                        </group>
                    </page>
                    <page name="rent_detail" string="Renter Detail"
                          attrs="{'invisible':[ '|','|',('is_reserved', '=', False),('is_real_estate_company', '=', False),('user_groups_not_allowed', '=', True)]}">
                        <group>
                            <group>
                                <field name="renter_rel_id" string="Renter Name" readonly="1"/>
                            </group>
                        </group>
                    </page>
                    <page string="Documents" name="page_document"
                          attrs="{'invisible': ['|',('user_groups_not_allowed', '=', True),('is_real_estate_company', '=', False)]}">
                        <field name="document_ids" widget="many2many" options="{'not_delete': True}">
                            <kanban quick_create="false" create="true" delete="true">
                                <field name="id"/>
                                <field name="name"/>
                                <!-- <field name="activity_ids"/> -->
                                <templates>
                                    <t t-name="kanban-box">
                                        <div class="oe_kanban_global_click" style="max-width: 200px">
                                            <div class="o_kanban_record_top">
                                                <img t-att-src="kanban_image('property.document', 'file', record.id.raw_value)"
                                                     height="40" t-att-alt="record.id.raw_value"
                                                     width="40" class="oe_avatar oe_kanban_avatar_smallbox mb0"/>
                                                <div class="o_kanban_record_headings ml8">

                                                    <strong class="o_kanban_record_title">
                                                        <field name="name"/>
                                                    </strong>
                                                </div>
                                                <a t-if="! read_only_mode" type="delete" class="text-danger">
                                                    <i class="fa fa-times" title="delete"></i>
                                                </a>
                                            </div>

                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </page>

                    <page string="Image Gallery" name="page_image"
                          attrs="{'invisible': ['|',('user_groups_not_allowed', '=', False),('is_real_estate_company', '=', True)]}">
                        <field name="image_ids" widget="many2many" options="{'not_delete': True}">
                            <kanban quick_create="false" create="true" delete="true">
                                <field name="id"/>
                                <field name="name"/>
                                <templates>
                                    <t t-name="kanban-box">
                                        <div class="oe_kanban_global_click" style="max-width: 200px">
                                            <div class="o_kanban_record_top">
                                                <img t-att-src="kanban_image('property.image', 'file', record.id.raw_value)"
                                                     height="40" t-att-alt="record.id.raw_value"
                                                     width="40" class="oe_avatar oe_kanban_avatar_smallbox mb0"/>
                                                <div class="o_kanban_record_headings ml8">

                                                    <strong class="o_kanban_record_title">
                                                        <field name="name"/>
                                                    </strong>
                                                </div>
                                                <a t-if="! read_only_mode" type="delete" class="text-danger">
                                                    <i class="fa fa-times" title="delete"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </page>

                    <page name="page_sale_offer" string="Sale Offer"
                          attrs="{'invisible': ['|','|',('property_book_for', '=', 'rent'),('user_groups_not_allowed', '=', False),('is_real_estate_company', '=', True)]}"
                          groups="property_rental_mgt_app.group_manager,property_rental_mgt_app.group_purchaser">
                        <field name="sale_offer_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                            <tree editable="bottom">
                                <field name="offer_id"/>
                                <field name="property_id"/>
                                <field name="partner_id"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="duration_month"/>
                                <field name="duration_days"/>
                                <field name="property_price"/>
                                <field name="discount_offer" string="Discount(%)"/>
                                <field name="offer_price"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                    <page name="page_rent_offer" string="Rent Offer"
                          attrs="{'invisible': ['|','|',('property_book_for', '=', 'sale'),('user_groups_not_allowed', '=', True),('is_real_estate_company', '=', False)]}">
                        <field name="rent_offer_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                            <tree editable="bottom">
                                <field name="offer_id"/>
                                <field name="property_id"/>
                                <field name="partner_id" string="Renter"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="duration_month"/>
                                <field name="duration_days"/>
                                <field name="property_price"/>
                                <field name="discount_offer" string="Discount(%)"/>
                                <field name="offer_price"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                    <page name="accounting" string="Accounting"
                          attrs="{'invisible': ['|',('user_groups_not_allowed', '=', False),('is_real_estate_company', '=', True)]}">
                        <group colspan="2" string="Accounting">
                            <field name="analytic_account_id"/>
                            <field name="account_id"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- property analysisis report graph -->
        <record model="ir.ui.view" id="property_graph_pie">
            <field name="name">product.product.graph</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <graph string="Property Valuation" type="pie">
                    <field name="name" type="row"/>
                    <field name="property_book_for" type="col"/>
                    <field name="property_price" type="measure"/>
                    <!--					<field name="rent_price" type="measure"/>-->
                </graph>
            </field>
        </record>

        <record id="property_graph_pivot" model="ir.ui.view">
            <field name="name">pivotroduct.product.pivot</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <pivot string="Property Analysis">
                    <field name="name" type="row"/>
                    <field name="property_book_for" type="col"/>
                    <field name="property_price" type="measure"/>
                    <!--					<field name="rent_price" type="measure"/>-->
                </pivot>
            </field>
        </record>

        <record model="ir.ui.view" id="property_graph_line">
            <field name="name">product.product.line</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <graph string="Property Valuation" type="line">
                    <field name="name" type="row"/>
                    <field name="property_book_for" type="col"/>
                    <field name="property_price" type="measure"/>
                    <!--					<field name="rent_price" type="measure"/>-->
                </graph>
            </field>
        </record>

        <record model="ir.ui.view" id="property_graph_bar">
            <field name="name">product.product.bar</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <graph string="Property Valuation" type="bar" stacked="True">
                    <field name="name" type="row"/>
                    <field name="property_book_for" type="col"/>
                    <field name="property_price" type="measure"/>
                    <!--					<field name="rent_price" type="measure"/>-->
                </graph>
            </field>
        </record>

        <record id="property_product_action" model="ir.actions.act_window">
            <field name="name">Sale &amp; Rent Property</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.product</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
					(0, 0, {'view_mode': 'tree', 'view_id': ref('product_product_tree_view_inherit')}),
					(0, 0, {'view_mode': 'form', 'view_id': ref('product_normal_form_view_inherit')}),
					]"/>
            <field name="binding_view_types">form</field>
            <field name="domain">[('is_property','=',True)]</field>
            <field name="context">{'search_default_groupby_status': 1, 'default_is_property':1,
                'default_sale_ok':0,'default_purchase_ok':0,'default_state':'draft'}
            </field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new property.
                </p>
            </field>
        </record>

        <record id="property_analysis_action" model="ir.actions.act_window">
            <field name="name">Property Analysis Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.product</field>
            <field name="view_mode">pivot,graph,kanban</field>
            <field name="binding_view_types">form</field>
            <field name="domain">[('is_property','=',True)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Report not exist.
                </p>
            </field>
        </record>

        <record id="sale_property_action" model="ir.actions.act_window">
            <field name="name">Available Sale Properties</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.product</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="binding_view_types">form</field>
            <field name="domain">[('is_property','=',True),('property_book_for','=','sale'),('state','!=','sold')]
            </field>
            <field name="context">{'search_default_groupby_status': 1, 'default_is_property':1,
                'default_sale_ok':0,'default_purchase_ok':0,'default_state':'draft'}
            </field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new property.
                </p>
            </field>
        </record>

        <record id="rent_property_action" model="ir.actions.act_window">
            <field name="name">Available Rent Properties</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.product</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="binding_view_types">form</field>
            <field name="domain">[('is_property','=',True),('property_book_for','=','rent'),('state','!=','reserve')]
            </field>
            <field name="context">{'search_default_groupby_status': 1, 'default_is_property':1,
                'default_sale_ok':0,'default_purchase_ok':0,'default_state':'draft'}
            </field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new property.
                </p>
            </field>
        </record>

    </data>
</odoo>
