        <!-- add property field in tree -->
        <record model="ir.ui.view" id="product_product_tree_view_inherit">
            <field name="name">product.product.tree</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="decoration-success">state=='rent'</attribute>
                    <attribute name="decoration-danger">state in ['reserve','sold','cancel']</attribute>
                </xpath>
                <xpath expr="//field[@name='default_code']" position="after">
                    <field name="is_property" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="owner_id" attrs="{'invisible': [('is_property', '=', False)]}"/>
                    <field name="property_book_for" attrs="{'invisible': [('is_property', '=', False)]}"/>
                    <field name="state" attrs="{'invisible': [('is_property', '=', False)]}"/>
                    <field name="rent_price"
                           attrs="{'invisible': ['|',('is_property', '=', False),('rent_price', '=',0.00)]}"/>
                    <field name="property_price"
                           attrs="{'invisible': ['|',('is_property', '=', False),('property_price', '=',0.00)]}"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="property_kanban_view_inherit">
            <field name="name">product.product</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_kanban_view"/>
            <field name="arch" type="xml">
                <kanban>
                    <attribute name='default_group_by'>state</attribute>
                    <field name="property_book_for"/>
                    <field name="property_price"/>
                    <field name="rent_price"/>
                    <field name="state"/>
                    <field name="is_sold"/>
                    <field name="is_reserved"/>
                </kanban>
<!--                <field name="list_price" position="replace">-->
<!--                    <li>-->
<!--                        <strong>Rent Price :-->
<!--                            <field name="rent_price" invisible="1"/>-->
<!--                        </strong>-->
<!--                    </li>-->
<!--                </field>-->
                <div class="oe_kanban_details" position="replace">
                    <div class="oe_kanban_details">
                        <strong class="o_kanban_record_title">
                            <h3>
                                <field name="name"/>
                            </h3>
                        </strong>
                        <div class="o_kanban_tags_section">
                            <field name="product_template_attribute_value_ids" groups="product.group_product_variant"/>
                        </div>
                        <t t-if="record.property_book_for.raw_value == 'sale'">
                            <strong>Property Price :
                                <field name="property_price"/>
                            </strong>
                        </t>
                        <br/>
                        <t t-if="record.property_book_for.raw_value == 'rent'">
                            <strong>Property Rent :
                                <field name="rent_price"/>
                            </strong>
                        </t>
                        <ul>
                            <li>
                                <strong>Property Type :
                                    <field name="property_book_for"/>
                                </strong>
                            </li>
                            <li attrs="{'invisible':[ ('is_sold', '=', False)]}">
                                <strong>Purchaser :
                                    <field name="purchaser_id"/>
                                </strong>
                            </li>
                            <!--							<li attrs="{'invisible':[ ('is_reserved', '=', False)]}"><strong>Renter : <field name="renter_id"/></strong></li>-->
                            <li>
                                <strong>Owner :
                                    <field name="owner_id"/>
                                </strong>
                            </li>
                            <li>
                                <strong>Status :
                                    <field name="state"/>
                                </strong>
                            </li>
                        </ul>
                        <div name="tags"/>
                    </div>
                </div>
            </field>
        </record>

        <!-- add property detail in filter search view -->
        <record id="product_search_form_view_inherit" model="ir.ui.view">
            <field name="name">peoduct.product.search</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_search_form_view"/>
            <field name="arch" type="xml">
                <filter name="activities_upcoming_all" position="after">
                    <group expand="1" string="Group By">
                        <field name="is_sold" invisible="1"/>
                        <field name="is_reserved" invisible="1"/>
                        <field name="state" invisible="1"/>
                        <filter name="groupby_status" context="{'group_by' : 'state'}" string="Status"/>
                        <filter name="groupby_type" context="{'group_by' : 'property_book_for'}" string="Property Type"
                                groups="property_rental_mgt_app.group_manager"/>
                        <separator/>
                        <filter name="groupby_renter" context="{'group_by' : 'user_id'}" string="Renter"
                                groups="property_rental_mgt_app.group_manager" domain="[('state','=','reserve')]"/>
                        <filter name="groupby_purchaser" context="{'group_by' : 'user_id'}" string="Purchaser"
                                domain="[('state','=','sold')]" groups="property_rental_mgt_app.group_manager"/>
                        <separator/>
                        <filter name="groupby_owner" context="{'group_by' : 'owner_id'}" string="Owner"
                                groups="property_rental_mgt_app.group_purchaser,property_rental_mgt_app.group_manager"/>
                        <filter name="groupby_saleperson" context="{'group_by' :'salesperson_id'}" string="Salesperson"
                                groups="property_rental_mgt_app.group_purchaser,property_rental_mgt_app.group_manager"/>
                    </group>
                </filter>
                <field name="name" position="after">
                    <filter string="Booked for Purchase" name="purchased" domain="[('is_sold','=',True)]"
                            groups="property_rental_mgt_app.group_purchaser,property_rental_mgt_app.group_manager"/>
                    <filter string="Reserved for Rent" name="reserved" domain="[('is_reserved','=',True)]"
                            groups="property_rental_mgt_app.group_rent_payer,property_rental_mgt_app.group_manager"/>
                    <separator/>
                    <filter string="Available for Rent" name="avl_rent" domain="[('state','=','rent')]"
                            groups="property_rental_mgt_app.group_rent_payer,property_rental_mgt_app.group_manager"/>
                    <filter string="Available for Sale" name="avl_sale" domain="[('state','=','sale')]"
                            groups="property_rental_mgt_app.group_purchaser,property_rental_mgt_app.group_manager"/>
                </field>
            </field>
        </record>

        <!-- view common to both template and product -->
        <record id="view_template_property_form_stock_inherit" model="ir.ui.view">
            <field name="name">product.template.stock.property.form.stock.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.view_template_property_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="product_variant_id" invisible="1"/>
                    <field name="is_property" invisible="1" readonly="1"/>
                </xpath>
                <xpath expr="//group[@name='operations']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_property', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//group[@name='traceability']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_property', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//group[@name='stock_property']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_property', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//page[@name='inventory']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_property', '=', True)]}</attribute>
                </xpath>
            </field>
        </record>

        <!-- view common to both template and product -->
        <record id="product_form_view_procurement_button_stock_inherit" model="ir.ui.view">
            <field name="name">product.product.procurement.stock.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="stock.product_form_view_procurement_button"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_open_quants']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_property', '=', True)]}</attribute>
